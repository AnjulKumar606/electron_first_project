{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Main + Renderer",
      "configurations": ["Main", "Renderer"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Renderer",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "C:/Users/anjul/AppData/Roaming/fnm/node-versions/v20.16.0/installation/node.exe",
      "args": [
        "${workspaceFolder}/node_modules/electron/cli.js",
        ".",
        "--remote-debugging-port=9222",
        "--inspect=5858"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal"
    }
  ]
}
